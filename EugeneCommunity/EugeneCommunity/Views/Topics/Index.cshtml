@model IEnumerable<EugeneCommunity.Models.TopicViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Community Forum</h2>

<p>
    @Html.ActionLink("Create New Topic", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("View Posts", "Details", new { id=item.TopicId }) | @item.Posts.Count()
        </td>
    </tr>
}

</table>
